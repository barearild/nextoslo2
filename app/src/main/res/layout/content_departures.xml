<?xml version="1.0" encoding="utf-8"?>

<com.barearild.next.v2.views.departures.DeparturesSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.barearild.next.v2.views.departures.DeparturesActivity"
    tools:showIn="@layout/activity_departures"

    android:id="@+id/departure_list_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    >

    <com.barearild.next.v2.views.departures.DeparturesRecyclerView
        android:id="@+id/departure_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/departure_item"
        app:popupTheme="@style/NextTheme.PopupOverlay"
 />

</com.barearild.next.v2.views.departures.DeparturesSwipeRefreshLayout>

