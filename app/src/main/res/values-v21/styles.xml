<resources>

    <style name="NextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/nextActionBar</item>
        <!--<item name="drawerArrowStyle">@style/nextDrawerArrowToggle</item>-->
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="toolbarStyle">@style/nextActionBar</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/NextTheme.PopupOverlay</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>
    </style>

    <style name="NextTheme.NoActionBar" parent="NextTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="BusTheme" parent="NextTheme.NoActionBar">
        <item name="colorPrimary">@color/busColorPrimary</item>
        <item name="colorPrimaryDark">@color/busColorPrimaryDark</item>
        <item name="transport_type_icon">@drawable/ic_directions_bus_white_36dp</item>
        <item name="transport_type_name">@string/transport_bus</item>
    </style>

    <style name="TramTheme" parent="NextTheme.NoActionBar">
        <item name="colorPrimary">@color/tramColorPrimary</item>
        <item name="colorPrimaryDark">@color/tramColorPrimaryDark</item>
        <item name="transport_type_icon">@drawable/ic_directions_transit_white_36dp</item>
        <item name="transport_type_name">@string/transport_tram</item>
    </style>

    <style name="MetroTheme" parent="NextTheme.NoActionBar">
        <item name="colorPrimary">@color/metroColorPrimary</item>
        <item name="colorPrimaryDark">@color/metroColorPrimaryDark</item>
        <item name="transport_type_icon">@drawable/ic_directions_subway_white_36dp</item>
        <item name="transport_type_name">@string/transport_metro</item>
    </style>

    <style name="TrainTheme" parent="NextTheme.NoActionBar">
        <item name="colorPrimary">@color/trainColorPrimary</item>
        <item name="colorPrimaryDark">@color/trainColorPrimaryDark</item>
        <item name="transport_type_icon">@drawable/ic_directions_railway_white_36dp</item>
        <item name="transport_type_name">@string/transport_train</item>
    </style>

    <style name="RegionalBusTheme" parent="NextTheme.NoActionBar">
        <item name="colorPrimary">@color/regionalBusColorPrimary</item>
        <item name="colorPrimaryDark">@color/regionalBusColorPrimaryDark</item>
        <item name="transport_type_icon">@drawable/ic_directions_bus_white_36dp</item>
        <item name="transport_type_name">@string/transport_regional_bus</item>
    </style>

    <style name="BoatTheme" parent="NextTheme.NoActionBar">
        <item name="colorPrimary">@color/boatColorPrimary</item>
        <item name="colorPrimaryDark">@color/boatColorPrimaryDark</item>
        <item name="transport_type_icon">@drawable/ic_directions_boat_white_36dp</item>
        <item name="transport_type_name">@string/transport_boat</item>
    </style>
</resources>
